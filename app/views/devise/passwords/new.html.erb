<div class="container-fluid">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h2>Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, html: {class: "form-horizontal"}) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <div class="col-sm-2">
            <%= f.label :email, class: "control-label" %>
          </div>
          <div class="col-sm-10">
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-2"></div>
          <div class="col-sm-10">
            <%= f.submit "Send me reset password instructions", class: "btn btn-success pull-left" %>
          </div>
        </div>
      <% end %>

      <div class="col-sm-offset-2 col-sm-10">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
