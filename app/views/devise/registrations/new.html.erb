<div class="container-fluid">
  <div class="row">
    <div class="col-md-8">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
        <%= render 'layouts/error_messages', object: resource %>

        <div class="form-group">
          <%= f.label :name, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :gamer_tag, "Gamer Tag/PSN ID", class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.text_field :gamer_tag, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :platform, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.select :platform, [['XBox','xbox'],['Playstation','playstation'],['PC','pc']],  {include_blank: "Select Platfrom"}, {class: "form-control"} %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :game_ids, "Your Games", class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.select :game_ids, Game.all.collect {|g| [ g.name, g.id ] }, {}, { :multiple => true, class: "form-control game-multiselect" } %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :email, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-4">
            <%= f.label :password_confirmation, class: "control-label" %><br />
          </div>
          <div class="col-sm-8">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-8">
            <%= f.submit "Sign up", class: "btn btn-success pull-left" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>
